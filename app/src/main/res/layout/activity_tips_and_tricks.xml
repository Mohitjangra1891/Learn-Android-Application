<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tips_and_TRICKS">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="10dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleMarginStart="12dp"
        app:titleTextAppearance="@style/CustomTextAppearancefor_toolbar" />

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:id="@+id/line"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_custom_listview_item2"
        android:src="@drawable/keyboard"

        android:layout_width="47dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/key_short"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Keyboard Shortcuts"

        android:layout_marginStart="10dp"
        android:fontFamily="@font/alata"
        android:textColor="@color/black"
        android:textSize="18sp" />
    </LinearLayout>
    <View
        android:id="@+id/divi"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7000000" />
    <LinearLayout
        android:layout_below="@id/divi"
        android:layout_width="match_parent"
        android:id="@+id/plugin"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/plug"

            android:layout_width="47dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Useful Plugins"
            android:id="@+id/aws_plugin"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/alata"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <View
        android:layout_below="@id/plugin"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A1000000" />
</RelativeLayout>